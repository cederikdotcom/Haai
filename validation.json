  "edgeCaseTests": {
    "description": "Testing boundary cases and ambiguous activities",
    "testCases": [
      {
        "activity": "Video conferencing with international team",
        "candidates": ["4.3 Coordinative Communication", "4.4 Informational Exchange"],
        "resolution": "4.3 Coordinative Communication",
        "rationale": "Primary purpose is synchronizing actions across team members"
      },
      {
        "activity": "Creating a PowerPoint presentation",
        "candidates": ["2.2 Report Generation", "3.2 Visual Design"],
        "resolution": "Context-dependent",
        "rationale": "If informational focus -> 2.2; if design/creative focus -> 3.2"
      },
      {
        "activity": "Automated trading algorithm development",
        "candidates": ["1.4 Algorithmic Execution", "3.3 Software Development"],
        "resolution": "3.3 Software Development",
        "rationale": "Creating the algorithm is creative; running it is 1.4"
      },
      {
        "activity": "Physical therapy session",
        "candidates": ["6.3 Healthcare Delivery", "10.3 Health Maintenance"],
        "resolution": "6.3 Healthcare Delivery (therapist), 10.3 Health Maintenance (patient)",
        "rationale": "Classification depends on perspective (provider vs recipient)"
      },
      {
        "activity": "Playing video games",
        "candidates": ["10.5 Personal Expression", "4.5 Social Communication"],
        "resolution": "10.5 Personal Expression (solo), 4.5 Social Communication (multiplayer social)",
        "rationale": "Primary purpose determines classification"
      },
      {
        "activity": "Conducting a job interview",
        "candidates": ["4.2 Persuasive Communication", "4.4 Informational Exchange", "5.1 Administrative Processing"],
        "resolution": "4.4 Informational Exchange (interviewer) + 4.2 Persuasive (candidate)",
        "rationale": "Role-dependent classification"
      }
    ]
