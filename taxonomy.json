  "classificationRules": {
    "multiDomainActivities": {
      "principle": "When an activity involves multiple domains, classify by primary purpose",
      "examples": [
        {
          "activity": "Video call with client",
          "appearsAs": "Communication + Service",
          "classifyAs": "4.4 Informational Exchange",
          "rationale": "Primary purpose is communication"
        },
        {
          "activity": "Writing code while pair programming",
          "appearsAs": "Creative + Social",
          "classifyAs": "3.3 Software Development",
          "rationale": "Primary output is code"
        },
        {
          "activity": "Teaching surgery",
          "appearsAs": "Education + Craft",
          "classifyAs": "4.1 Instructional Communication",
          "rationale": "Primary purpose is teaching"
        },
        {
          "activity": "Telehealth consultation",
          "appearsAs": "Healthcare + Communication",
          "classifyAs": "6.3 Healthcare Delivery",
          "rationale": "Primary purpose is care"
        }
      ]
    },
    "boundaryRules": [
      {
        "boundary": "Domain 1 vs 2",
        "rule": "If requires interpretation of meaning -> Domain 2"
      },
      {
        "boundary": "Domain 2 vs 3",
        "rule": "If output must be novel/creative -> Domain 3"
      },
      {
        "boundary": "Domain 4 vs 5",
        "rule": "If relationship > transaction -> Domain 4; if procedure > relationship -> Domain 5"
      },
      {
        "boundary": "Domain 5 vs 6",
        "rule": "If trust/emotional attunement essential -> Domain 6"
      },
      {
        "boundary": "Domain 7 vs 8",
        "rule": "If requires acquired expertise/judgment -> Domain 8"
      },
      {
        "boundary": "Domain 8 vs 9",
        "rule": "If primary activity is locomotion -> Domain 9"
      },
      {
        "boundary": "Domain 9 vs 10",
        "rule": "If for self vs. for work -> Domain 10 (self) or 9 (work)"
      }
    ],
    "contextModifiers": {
      "description": "The same physical action may classify differently based on context",
      "examples": [
        {
          "action": "Cooking",
          "professionalContext": "8.4 Culinary Arts",
          "personalContext": "10.2 Nourishment"
        },
        {
          "action": "Driving",
          "professionalContext": "9.1 Vehicle Operation",
          "personalContext": "9.1 Vehicle Operation"
        },
        {
          "action": "Cleaning",
          "professionalContext": "7.5 Facility Maintenance",
          "personalContext": "10.4 Domestic Maintenance"
        },
        {
          "action": "Exercise",
          "professionalContext": "6.3 Healthcare Delivery (Physical Therapy)",
          "personalContext": "10.3 Health Maintenance"
        }
      ]
    }
