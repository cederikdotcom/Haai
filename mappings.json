{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0",
  "title": "External Taxonomy Mappings",
  "description": "Mappings between HAAI taxonomy and external classification systems",
  "lastUpdated": "2026-02-01",
  "sources": {
    "onet": {
      "name": "O*NET Content Model",
      "description": "US Department of Labor occupational information network",
      "url": "https://www.onetcenter.org/content.html",
      "version": "28.0"
    },
    "atus": {
      "name": "American Time Use Survey Activity Lexicon",
      "description": "Bureau of Labor Statistics time use classification",
      "url": "https://www.bls.gov/tus/lexicons.htm",
      "version": "2023"
    },
    "hetus": {
      "name": "Harmonised European Time Use Surveys",
      "description": "Eurostat time use classification guidelines",
      "url": "https://ec.europa.eu/eurostat/web/time-use-surveys"
    },
    "icatus": {
      "name": "International Classification of Activities for Time-Use Statistics",
      "description": "UN Statistics Division classification",
      "url": "https://unstats.un.org/unsd/gender/timeuse/",
      "version": "2016"
    },
    "behavior1k": {
      "name": "BEHAVIOR-1K",
      "description": "Stanford benchmark for embodied AI household tasks",
      "url": "https://behavior.stanford.edu"
    },
    "activitynet": {
      "name": "ActivityNet",
      "description": "Large-scale video understanding benchmark",
      "url": "http://activity-net.org/"
    },
    "kinetics": {
      "name": "Kinetics Dataset",
      "description": "DeepMind human action video dataset",
      "url": "https://github.com/cvdfoundation/kinetics-dataset"
    },
    "isco": {
      "name": "International Standard Classification of Occupations",
      "description": "ILO occupational classification",
      "version": "ISCO-08"
    }
  },
  "onetMapping": {
    "description": "Mapping O*NET Work Activities to HAAI domains",
    "mappings": [
      {
        "onetCategory": "Information Input",
        "onetActivities": [
          "Getting Information",
          "Monitoring Processes, Materials, or Surroundings",
          "Identifying Objects, Actions, and Events",
          "Inspecting Equipment, Structures, or Materials",
          "Estimating the Quantifiable Characteristics"
        ],
        "haaiDomains": [1, 2, "7.4"]
      },
      {
        "onetCategory": "Mental Processes",
        "onetActivities": [
          "Processing Information",
          "Evaluating Information to Determine Compliance",
          "Analyzing Data or Information",
          "Judging the Qualities of Objects, Services, or People",
          "Making Decisions and Solving Problems",
          "Thinking Creatively",
          "Updating and Using Relevant Knowledge",
          "Developing Objectives and Strategies",
          "Scheduling Work and Activities",
          "Organizing, Planning, and Prioritizing Work"
        ],
        "haaiDomains": [1, 2, 3, "4.3"]
      },
      {
        "onetCategory": "Work Output (Digital)",
        "onetActivities": [
          "Interacting With Computers",
          "Documenting/Recording Information"
        ],
        "haaiDomains": [1, 2, 3]
      },
      {
        "onetCategory": "Work Output (Technical)",
        "onetActivities": [
          "Drafting, Laying Out, and Specifying Technical Devices",
          "Repairing and Maintaining Mechanical Equipment",
          "Repairing and Maintaining Electronic Equipment"
        ],
        "haaiDomains": ["3.3", "8.1", "8.2"]
      },
      {
        "onetCategory": "Work Output (Physical)",
        "onetActivities": [
          "Performing General Physical Activities",
          "Handling and Moving Objects",
          "Controlling Machines and Processes",
          "Operating Vehicles, Mechanized Devices, or Equipment"
        ],
        "haaiDomains": [7, 8, 9]
      },
      {
        "onetCategory": "Interacting (Communication)",
        "onetActivities": [
          "Interpreting the Meaning of Information for Others",
          "Communicating with Supervisors, Peers, or Subordinates",
          "Communicating with People Outside the Organization"
        ],
        "haaiDomains": [4]
      },
      {
        "onetCategory": "Interacting (Relationships)",
        "onetActivities": [
          "Establishing and Maintaining Interpersonal Relationships",
          "Assisting and Caring for Others",
          "Selling or Influencing Others",
          "Resolving Conflicts and Negotiating with Others"
        ],
        "haaiDomains": [4, 5, 6]
      },
      {
        "onetCategory": "Interacting (Leadership)",
        "onetActivities": [
          "Coordinating the Work and Activities of Others",
          "Developing and Building Teams",
          "Training and Teaching Others",
          "Coaching and Developing Others",
          "Provide Consultation and Advice to Others"
        ],
        "haaiDomains": ["4.1", "4.3", "6.4"]
      },
      {
        "onetCategory": "Interacting (Administrative)",
        "onetActivities": [
          "Performing Administrative Activities",
          "Staffing Organizational Units",
          "Monitoring and Controlling Resources"
        ],
        "haaiDomains": ["5.1", "5.3"]
      }
    ]
  },
