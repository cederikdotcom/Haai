  "cognitiveFrameworks": {
    "description": "Related cognitive and psychomotor taxonomies for reference",
    "frameworks": [
      {
        "name": "Bloom's Taxonomy",
        "domain": "Cognitive",
        "levels": ["Remember", "Understand", "Apply", "Analyze", "Evaluate", "Create"],
        "relevance": "Mapping cognitive complexity of activities"
      },
      {
        "name": "Dave's Taxonomy",
        "domain": "Psychomotor",
        "levels": ["Imitation", "Manipulation", "Precision", "Articulation", "Naturalization"],
        "relevance": "Mapping physical skill acquisition stages"
      },
      {
        "name": "Krathwohl's Taxonomy",
        "domain": "Affective",
        "levels": ["Receiving", "Responding", "Valuing", "Organizing", "Characterizing"],
        "relevance": "Mapping emotional/social complexity"
      }
    ]
  }
